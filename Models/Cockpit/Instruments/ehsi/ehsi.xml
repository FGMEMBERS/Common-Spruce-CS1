<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>

    <path>efis84-ehsi.ac</path>

    <animation>
        <type>material</type>
        <object-name>EHSI.bezel</object-name>
        <emission>
            <red>0.005</red>
            <green>0.005</green>
            <blue>0.005</blue>
            <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>EHSI.face</object-name>
        <object-name>HDGback</object-name>
        <object-name>HDGback.gps</object-name>
        <object-name>hdg-bug</object-name>
        <object-name>toflag</object-name>
        <object-name>ADFneedle</object-name>
        <object-name>CRSneedle</object-name>
        <object-name>CRSdeflection</object-name>
        <object-name>EHSI.gps</object-name>
        <object-name>EHSI.gsp1</object-name>
        <object-name>EHSI.gsp2</object-name>
        <object-name>EHSI.gsp3</object-name>
        <object-name>EHSI.hdg1</object-name>
        <object-name>EHSI.hdg2</object-name>
        <object-name>EHSI.hdg3</object-name>
        <object-name>EHSI.crs1</object-name>
        <object-name>EHSI.crs2</object-name>
        <object-name>EHSI.crs3</object-name>
        <object-name>HDGknob</object-name>
        <object-name>CRSknob</object-name>
        <emission>
            <red>0.035</red>
            <green>0.035</green>
            <blue>0.035</blue>
            <factor-prop>/systems/electrical/outputs/efis-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>toflag</object-name>
        <condition>
            <property>/instrumentation/nav/to-flag</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>EHSI.gps</object-name>
        <condition>
            <property>/instrumentation/nav/slaved-to-gps</property>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>hdg-bug</object-name>
        <property>/autopilot/internal/fdm-heading-bug-error-deg</property>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.006</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>HDGback</object-name>
        <object-name>CRSneedle</object-name>
        <object-name>CRSdeflection</object-name>
        <object-name>toflag</object-name>
        <property>/orientation/heading-magnetic-deg</property>
        <axis>
            <x>1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.006</z-m>
        </center>
    </animation>

<!--  COURSE -->

    <animation>
        <type>rotate</type>
        <object-name>CRSneedle</object-name>
        <object-name>CRSdeflection</object-name>
        <object-name>toflag</object-name>
        <property>/instrumentation/nav/radials/selected-deg</property>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.006</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>CRSdeflection</object-name>
        <property>/instrumentation/nav/heading-needle-deflection</property>
        <interpolation>
            <entry><ind>-10.0</ind><dep>-0.0172</dep></entry>
            <entry><ind>0.0</ind><dep>0.0</dep></entry>
            <entry><ind>10.0</ind><dep>0.0172</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.006</z-m>
        </center>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>EHSI.crs1</object-name>
        <property>/instrumentation/nav/radials/selected-deg</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>EHSI.crs2</object-name>
        <property>/instrumentation/nav/radials/selected-deg</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>EHSI.crs3</object-name>
        <property>/instrumentation/nav/radials/selected-deg</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

<!-- ADF needle -->
    <animation>
        <type>rotate</type>
        <object-name>ADFneedle</object-name>
        <property>/instrumentation/adf/indicated-bearing-deg</property>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.006</z-m>
        </center>
    </animation>

<!--  hdg bug -->

    <animation>
        <type>textranslate</type>
        <object-name>EHSI.hdg1</object-name>
        <property>/autopilot/settings/heading-bug-deg</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>EHSI.hdg2</object-name>
        <property>/autopilot/settings/heading-bug-deg</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>EHSI.hdg3</object-name>
        <property>/autopilot/settings/heading-bug-deg</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

<!--  hdg bug control -->
  <animation>
    <type>pick</type>
    <object-name>hdg.plane</object-name>
    <visible>false</visible>
    <action>
      <name>small decrease (scrollwheel)</name>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>small increase (scrollwheel)</name>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>increase</name>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>10</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>decrease</name>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>-10</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>


<!--  course bug control -->
  <animation>
    <type>pick</type>
    <object-name>crs.plane</object-name>
    <visible>false</visible>
    <action>
