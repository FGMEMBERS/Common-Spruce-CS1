  </animation>

<!--  groundspeed -->

    <animation>
        <type>textranslate</type>
        <object-name>EHSI.gsp1</object-name>
        <property>/velocities/groundspeed-kt</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>EHSI.gsp2</object-name>
        <property>/instrumentation/gps/indicated-ground-speed-kt</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>EHSI.gsp3</object-name>
        <property>/instrumentation/gps/indicated-ground-speed-kt</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

</PropertyList>
