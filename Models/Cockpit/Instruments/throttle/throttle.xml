<?xml version="1.0"?>
<PropertyList>

 <path>throttle.ac</path>

  <animation>
    <type>material</type>
    <object-name>Throttle</object-name>
    <object-name>Mixture</object-name>
    <object-name>Housing</object-name>
    <object-name>screw</object-name>
    <object-name>Cylinder.002</object-name>
    <object-name>support</object-name>
    <emission>
        <red>0.005</red>
        <green>0.005</green>
        <blue>0.005</blue>
        <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

 <animation>
  <type>rotate</type>
  <object-name>Throttle</object-name>
  <property>/controls/engines/engine[0]/throttle</property>
  <interpolation>
   <entry>
    <ind>0.0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>100</dep>
   </entry>
  </interpolation>
  <axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Mixture</object-name>
  <property>/controls/engines/engine[0]/mixture</property>
  <interpolation>
   <entry>
    <ind>0.0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>60</dep>
   </entry>
  </interpolation>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

  <animation>
    <type>pick</type>
    <object-name>Throttle</object-name>
    <object-name>Housing</object-name>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>/controls/engines/engine/throttle</property>
        <step>0.1</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>/controls/engines/engine/throttle</property>
        <step>-0.1</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>Mixture</object-name>
    <object-name>screw</object-name>
    <object-name>Cylinder.002</object-name>
    <object-name>support</object-name>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>/controls/engines/engine[0]/mixture</property>
        <step>-0.1</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>/controls/engines/engine[0]/mixture</property>
        <step>0.1</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

<!-- animate the space key on your keyboard -->
	<animation>
		<type>select</type>
		<object-name>MicButton</object-name>
		<condition>
      <not>
      <and>
			<equals>
        <property>/devices/status/keyboard/event/key</property>
        <value>32</value>
			</equals>
			<equals>
        <property>/devices/status/keyboard/event/pressed</property>
        <value>1</value>
			</equals>
     </and>
    </not>
		</condition>  
	</animation>


 <animation>
  <type>translate</type>
  <object-name>MicButton</object-name>
  <condition>
    <and>
      <equals>
        <property>/devices/status/keyboard/event/key</property>
        <value>32</value>
      </equals>
      <property>/devices/status/keyboard/event/pressed</property>
    </and>
  </condition>
  <factor>-0.007</factor>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>


</PropertyList>
