<?xml version="1.0"?>
<PropertyList>

    <path>altset.ac</path>

    <animation>
        <type>material</type>
        <object-name>AltSet.cancel</object-name>
        <object-name>AltSet.knob</object-name>
        <object-name>AltSet.bezel</object-name>
        <emission>
            <red>0.005</red>
            <green>0.005</green>
            <blue>0.005</blue>
            <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>APalt1</object-name>
        <object-name>APalt2</object-name>
        <object-name>APalt3</object-name>
        <object-name>APalt4</object-name>
        <object-name>APalt5</object-name>
        <condition>		
          <equals>		
            <property>/autopilot/switches/alt</property>
            <value>0</value>
          </equals>
        </condition>
        <emission>
            <red>0.020</red>
            <green>0.020</green>
            <blue>0.020</blue>
            <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>AltSet.bezel</object-name>
        <object-name>APalt1</object-name>
        <object-name>APalt2</object-name>
        <object-name>APalt3</object-name>
        <object-name>APalt4</object-name>
        <object-name>APalt5</object-name>
        <condition>		
          <equals>		
            <property>/autopilot/switches/alt</property>
            <value>1</value>
          </equals>
        </condition>
        <emission>
            <red>0.01</red>
            <green>0.04</green>
            <blue>0.0</blue>
            <factor-prop>/systems/electrical/outputs/efis-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>APalt1</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.00001</factor>
        <step>10000</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>APalt2</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>APalt3</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>APalt4</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>APalt5</object-name>
        <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

<!-- Hotspots -->
    <animation>
      <type>rotate</type>
      <object-name>AltSet.knob</object-name>
      <property>/autopilot/settings/target-altitude-ft</property>
        <factor>0.1</factor>
      <center>
      <x-m> 4.208</x-m>
      <y-m> 0.035</y-m>
      <z-m> 0.000</z-m>
      </center>
      <axis>
        <x> 1 </x>
        <y> 0 </y>
        <z> 0 </z>
      </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AltSetCancel.plane</object-name>
        <visible>false</visible>
        <action>
        <button>0</button>
        <binding>
          <command>property-assign</command>
          <property>/autopilot/settings/target-altitude-ft</property>
          <value>0.0</value>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AltSet.plane</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
            <command>property-adjust</command>
            <property>/autopilot/settings/target-altitude-ft</property>
            <step>1</step>
            <min>0.0</min>
            <max>30000.0</max>
            <wrap>false</wrap>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch2</property>
            </binding>
        </action>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
            <command>property-adjust</command>
            <property>/autopilot/settings/target-altitude-ft</property>
            <step>-1</step>
            <min>0.0</min>
            <max>30000.0</max>
            <wrap>false</wrap>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch2</property>
            </binding>
        </action>
        <action>
            <button>3</button>
            <binding>
            <command>property-adjust</command>
            <property>/autopilot/settings/target-altitude-ft</property>
            <step>100</step>
            <min>0.0</min>
            <max>30000.0</max>
            <wrap>false</wrap>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch2</property>
            </binding>
        </action>
        <action>
            <button>4</button>
            <binding>
            <command>property-adjust</command>
            <property>/autopilot/settings/target-altitude-ft</property>
            <step>-100</step>
            <min>0.0</min>
            <max>30000.0</max>
            <wrap>false</wrap>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch2</property>
            </binding>
        </action>
    </animation>


</PropertyList>
