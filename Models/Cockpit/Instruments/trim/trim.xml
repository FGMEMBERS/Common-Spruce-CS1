<?xml version="1.0" ?>
<PropertyList>
    <path>trim.ac</path>

    <animation>
      <type>material</type>
      <object-name>sight.ail</object-name>
      <object-name>sight.elev</object-name>
      <object-name>sight.rudder</object-name>
      <object-name>trim.ail</object-name>
      <object-name>trim.elev</object-name>
      <object-name>trim.rudder</object-name>
      <emission>
          <red>0.004</red>
          <green>0.004</green>
          <blue>0.004</blue>
          <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      </emission>
    </animation>

    <!--  animate the trim-wheels -->
    <animation>
      <type>rotate</type>
      <object-name>trim.elev</object-name>
      <property>/controls/flight/elevator-trim</property>
      <factor>-50</factor>
      <center>
        <x-m>0.0</x-m>
        <y-m>0.0</y-m>
        <z-m>0.0</z-m>
      </center>
      <axis>
        <x>0.0</x>
        <y>1.0</y>
        <z>0.0</z>
      </axis>
    </animation>

    <animation>
      <type>rotate</type>
      <object-name>trim.rudder</object-name>
      <property>/controls/flight/rudder-trim</property>
      <factor>50</factor>
      <center>
        <x-m>0.100</x-m>
        <y-m>0.0</y-m>
        <z-m>0.0</z-m>
      </center>
      <axis>
        <x>0.0</x>
        <y>1.0</y>
        <z>0.0</z>
      </axis>
    </animation>

    <animation>
      <type>rotate</type>
      <object-name>trim.ail</object-name>
      <property>/controls/flight/aileron-trim</property>
      <factor>50</factor>
      <center>
        <x-m>0.04</x-m>
        <y-m>0.0</y-m>
        <z-m>-0.09</z-m>
      </center>
      <axis>
        <x>0.0</x>
        <y>1.0</y>
        <z>0.0</z>
      </axis>
    </animation>

    <!--  trim-wheel control -->
    <animation>
      <type>pick</type>
      <object-name>trim.elev</object-name>
      <object-name>sight.elev</object-name>
      <action>
        <button>0</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
         <binding>
          <command>nasal</command>
          <script>cs1.applyTrimWheels(0, 0)</script>
         </binding>
      </action>
      <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/elevator-trim</property>
          <step>0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
      <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/elevator-trim</property>
          <step>-0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>trim.rudder</object-name>
      <object-name>sight.rudder</object-name>
      <action>
        <button>0</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
         <binding>
          <command>nasal</command>
          <script>cs1.applyTrimWheels(0, 1)</script>
         </binding>
      </action>
      <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/rudder-trim</property>
          <step>-0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
      <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/rudder-trim</property>
          <step>0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>trim.ail</object-name>
      <object-name>sight.ail</object-name>
      <action>
        <button>0</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
         <binding>
          <command>nasal</command>
          <script>cs1.applyTrimWheels(0, 2)</script>
         </binding>
      </action>
      <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/aileron-trim</property>
          <step>-0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
      <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/aileron-trim</property>
          <step>0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
    </animation>
</PropertyList>
